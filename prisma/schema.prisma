datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Post {
  id              Int         @id @default(autoincrement())
  title           String
  content         String
  createdAt       DateTime
  digest          String
  link            String
  originalDigest  String
  publication     Publication @relation(fields: [publicationId], references: [id])
  publicationId   Int
}

model Publication {
  id      Int     @id @default(autoincrement())
  name    String
  link    String
  posts   Post[]
}
