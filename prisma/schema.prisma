generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Post {
  id             Int         @id @default(autoincrement())
  title          String
  content        String
  createdAt      DateTime
  publishedAt    DateTime    @default(now())
  digest         String      @unique
  link           String
  originalDigest String?
  publicationId  Int
  publication    Publication @relation(fields: [publicationId], references: [id])
  cursor         String
}

model Publication {
  id    Int    @id @default(autoincrement())
  name  String @unique
  link  String
  posts Post[]
}
